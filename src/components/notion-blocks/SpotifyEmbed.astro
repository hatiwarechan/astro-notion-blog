--- 
export const isSpotifyURL = (url: URL): boolean => {
  return /^https?:\/\/open.spotify\.com\/(track|album|playlist|show|episode)\/[a-zA-Z0-9]+/.test(url.toString());
}

export interface Props {
  url: string
}

const { url } = Astro.props;

const isAlbumOrPlaylist = url.includes('/album/') || url.includes('/playlist/') || url.includes('/artist/');
const height = isAlbumOrPlaylist ? '380' : '152';

const iframeProps = { 
  src: `https://open.spotify.com/embed${new URL(url).pathname}`,
  height: `${height}px`,
};
--- 

<iframe
  {...iframeProps} 
  width="100%"
  frameBorder="0"
  allowTransparency="true"
  allow="encrypted-media"
/>
</iframe>
