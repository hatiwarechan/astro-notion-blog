---
export interface Props {
  trackingId: string
}

const { trackingId = 'G-WNKE5CT7DV' } = Astro.props
---

{trackingId && (
  <script is:inline async src={`https://www.googletagmanager.com/gtag/js?id=${trackingId}`}></script>
  <script is:inline define:vars={{ trackingId }}>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());

    gtag('config', trackingId);
  </script>
  )}
