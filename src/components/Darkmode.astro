<div class="mode-wrap">
    <input type="checkbox" id="mode-toggle" tabindex="0" />
    <label for="mode-toggle"><span></span></label>
  </div>
  
  <style is:global>
  /* --------------------
  layout.astro
  -------------------- */
  :root.darkmode {
    --bg: #191919;
    --fg: #ced5d9;
    --accents-1: #5ca053;
    --accents-2: #76c06c;
    --accents-3: #a5a5a5;;
  }
  .darkmode .header h1 {
    color: var(--fg);
  }
  
  /* --------------------
  NoContents.astro
  -------------------- */
  .darkmode .no-contents {
     color: var(--accents-3);
  }
  
  /* --------------------
  Pagination.astro
  -------------------- */
  .darkmode .pagination {
    color: var(--fg);
  }
  .darkmode .pagination a {
    border: 1px solid var(--accents-1);
  }
  .darkmode .pagination a:not(.inactive):hover {
    background: var(--accents-1);
    color: var(--fg);
  }
  .darkmode .pagination a.inactive {
    border-color: #555;
    color: #555;
  }
  
  /* --------------------
  Bookmark.astro
  -------------------- */
  .darkmode .bookmark {
    background: #202020;
  }
  
  /* --------------------
  BulletedListItems.astro
  -------------------- */
  .darkmode li {
    color: var(--fg);
  }
  
  /* --------------------
  Callout.astro
  -------------------- */
  .darkmode .callout.gray-background {
    background: #252525 !important;
  }
  
  /* --------------------
  Code.astro
  -------------------- */
  .darkmode .code pre {
    background: #272727 !important;
  }
  .darkmode .code pre code {
    color: var(--fg);
    background: #272727 !important;
  }
  .darkmode code {
    background: #2F2F2D;
  }
  
  /* --------------------
  Paragraph.astro
  -------------------- */
  .darkmode p {
    color: var(--fg);
  }
  
  /* --------------------
  SyncedBlock.astro
  -------------------- */
  .darkmode .callout.blue-background {
    background: #1D282E !important;
  }
  
  /* --------------------
  Table.astro
  -------------------- */
  .darkmode table {
    color: var(--fg);
  }
  .darkmode table th {
    background: #272727;
    border-color: #272727;
  }
  .darkmode table td {
    border-color: #272727;
  }
  
  /* --------------------
  TableOfContents.astro
  -------------------- */
  .darkmode .table-of-contents > a {
    color: #9B9B9B;
  }
  .darkmode .table-of-contents > a:hover {
    background: rgba(241, 241, 239, 0.1) !important;
  }
  
  /* --------------------
  ToDo.astro
  -------------------- */
  .darkmode .to-do {
    color: var(--fg);
  }
  
  /* --------------------
  notion-color.css
  -------------------- */
  .darkmode .gray, .gray:hover{
    color:#A4A7A8;
  }
  .darkmode .brown, .brown:hover{
    color:#937264;
  }
  .darkmode .orange, .orange:hover{
    color:#FFA344;
  }
  .darkmode .yellow, .yellow:hover{
    color:#FFDC49;
  }
  .darkmode .green, .green:hover{
    color:#4DAB9A;
  }
  .darkmode .blue, .blue:hover{
    color:#529CCA;
  }
  .darkmode .purple, .purple:hover{
    color:#9A6DD7;
  }
  .darkmode .pink, .pink:hover{
    color:#E255A1;
  }
  .darkmode .red, .red:hover{
    color:#FF7369;
  }
  
  .darkmode .gray-background {
    background: #454B4E !important;
    color: var(--fg);
  }
  .darkmode .brown-background {
    background: #434040 !important;
    color: var(--fg);
  }
  .darkmode .orange-background {
    background: #594A3A !important;
    color: var(--fg);
  }
  .darkmode .yellow-background {
    background: #59563B;
    color: var(--fg);
  }
  .darkmode .green-background {
    background: #354C4B !important;
    color: var(--fg);
  }
  .darkmode .blue-background {
    background: #364954 !important;
    color: var(--fg);
  }
  .darkmode .purple-background {
    background: #443F57 !important;
    color: var(--fg);
  }
  .darkmode .pink-background {
    background: #533B4C !important;
    color: var(--fg);
  }
  .darkmode .red-background {
    background: #594141 !important;
    color: var(--fg);
  }
  .darkmode .read-more-link a{
    background-color: #3d4b5a;
  }
  
  /* --------------------
  ダークモードトグル
  -------------------- */
  .mode-wrap #mode-toggle {
    display: none;
  }
  
  .mode-wrap #mode-toggle + label {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    font-size: 1rem;
    height: 1.6em;
    width: 2.4em;
    -webkit-box-sizing: border-box;
    box-sizing: border-box;
    border-radius: calc(2em / 2);
    background: #fff;
    -webkit-transition: 0.2s;  transition: 0.2s;
    border: 2px solid var(--accents-1);
    overflow: hidden;
    cursor: pointer;
    -webkit-tap-highlight-color: rgba(0,0,0,0);
  }
  
  .mode-wrap #mode-toggle + label span {
    background: var(--accents-1);
    border-radius: 50%;
    height: 1.8em;
    width: 1.8em;
    -webkit-transform: translateX(-0.125em) scale(0.65);
    transform: translateX(-0.125em) scale(0.65);
    -webkit-transition: 0.2s;
    transition: 0.2s;
    cursor: pointer;
    margin-top: -0.225em;
  }
  
  .mode-wrap #mode-toggle:checked + label {
    border-color: var(--bg);
    background: var(--accents-1);
  }
  
  .mode-wrap #mode-toggle:checked + label span {
    background: var(--bg);
    -webkit-transform: translateX(calc(100% - 1.25em)) scale(0.65);
    transform: translateX(calc(100% - 1.25em)) scale(0.65);
  }
  </style>
  
  <script is:inline>
  /* --------------------
  ダークモード切り替え
  -------------------- */
  // OS設定を反映
  const osDark = window.matchMedia("(prefers-color-scheme: dark)");
  // トグル処理
  const modeToggle = document.getElementById("mode-toggle");
  function darkModeOn() {
    document.documentElement.classList.add("darkmode");
    modeToggle.checked = true;
  }
  
  function darkModeOff() {
    document.documentElement.classList.remove("darkmode");
    modeToggle.checked = false;
  }
  
  const listener = (event) => {
    if (event.matches) {
      darkModeOn();
    } else {
      darkModeOff();
    }
  };
  
  osDark.addEventListener("change", listener);
  listener(osDark);
  
  modeToggle.addEventListener("change", () => {
    if (modeToggle.checked) {
      darkModeOn();
      style = "dark";
    } else {
      darkModeOff();
      style = "light";
    }
    localStorage.setItem("mode", style);
  });
  // モード設定をロード
  if (localStorage.getItem("mode") === "dark") {
    darkModeOn();
  } else if (localStorage.getItem("mode") === "light") {
    darkModeOff();
  }
  </script>