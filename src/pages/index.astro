---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <div class="container">
    <img src="/kuma.jpg" width="300" />
    <main>
      <p>色々置いていきます</p>
    </main>
  </div>
</Layout>


<style>
  .container {
    width: 640px;
    max-width: 100%;
    margin: 0 auto;
    text-align:center;
    
  }

  p{
    text-align: center;
    transform:rotateZ(0.05deg);
  }

  .container > main {
    font-weight: 800;
    margin-bottom: 40px;
  }
  .container div:last-child {
    margin-bottom: 0;
  }

  .container h2 {
    margin: 0 0 14px;
    font-size: 1.4rem;
    font-weight: 400;
  }

  .container p {
    margin: 0.3rem auto;
    line-height:4rem;
  }

  @media (prefers-color-scheme: dark) {
    p{
      color: var(--fg);
    }
  }
</style>
