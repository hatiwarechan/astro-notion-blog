---
import Layout from '../layouts/Layout.astro'
---

<Layout>
  <div class="container">
    <img src="/public/kuma.jpg" width="600" />
    <main>
      <p>ナガノさんが好きです</p>
    </main>
  </div>
</Layout>


<style>
  .container {
    width: 640px;
    max-width: 100%;
    margin: 0 auto;
  }

  p{text-align: center;
  }

  .container > main {
    font-weight: 800;
    margin-bottom: 40px;
  }
  .container div:last-child {
    margin-bottom: 0;
  }

  .container h2 {
    margin: 0 0 14px;
    font-size: 1.4rem;
    font-weight: 400;
  }

  .container p {
    margin: 0.3rem auto;
    line-height:4rem;
  }
</style>
